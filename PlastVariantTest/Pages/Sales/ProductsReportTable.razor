@* @inherits Fluxor.Blazor.Web.Components.FluxorComponent *@

@using Fluxor
@using PlastVariantTest.StateService.Customers
@using PlastVariantTest.StateService.Orders

@inject IState<OrdersReportState> State
@inject IDispatcher Dispatcher

<MudDataGrid T="ProductsReportItem"
             Hover="true"
             Dense="true"
             MultiSelection="true"
             Items="@State.Value.Orders.ToProductsReportItems()"
             SortMode="SortMode.Multiple"
             Filterable="true">
    <Columns>
        <PropertyColumn Property="x => x.Product.Name" Title="Покупатель" Sortable="true" Filterable="true" />
        <PropertyColumn Property="x => x.Sum" Format="N2" Title="Сумма, руб." CellStyle="text-align: right;" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="ProductsReportItem" />
    </PagerContent>
</MudDataGrid>
